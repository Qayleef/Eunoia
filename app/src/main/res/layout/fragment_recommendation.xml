<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recommendation">

    <Button
        android:id="@+id/BtnMusic"
        android:layout_width="220dp"
        android:layout_height="92dp"
        android:backgroundTint="#A5A6F6"
        android:foregroundTint="#A13838"
        android:text="MUSIC"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:textStyle="bold"
        app:iconTint="#DD9DE8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174"
        app:rippleColor="#E8AAF3" />

    <Button
        android:id="@+id/BtnYoga"
        android:layout_width="220dp"
        android:layout_height="86dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#A5A6F6"
        android:text="YOGA"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnMusic"
        app:layout_constraintVertical_bias="0.017" />

    <Button
        android:id="@+id/BtnBreathing"
        android:layout_width="223dp"
        android:layout_height="85dp"
        android:backgroundTint="#A5A6F6"
        android:text="BREATHING EXERCISE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnYoga" />

</androidx.constraintlayout.widget.ConstraintLayout>