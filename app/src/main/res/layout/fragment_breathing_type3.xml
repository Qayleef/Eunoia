<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreathingType2" >

    <TextView
        android:id="@+id/TVBreathe3"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:text="4-7-8 BREATHING "
        android:textColor="#050404"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.103" />

    <TextView
        android:id="@+id/TVInstructions"
        android:layout_width="194dp"
        android:layout_height="35dp"
        android:layout_marginBottom="472dp"
        android:text="Instructions : "
        android:textColor="@color/soft_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVBreathe3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/TVStep1"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="1. Let your lips part. Make a whooshing sound, exhaling completely through your mouth."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.296" />

    <TextView
        android:id="@+id/TVStep2"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="  2. Close your lips, inhaling silently through your nose as you count to four in your head."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep1"
        app:layout_constraintTop_toBottomOf="@+id/TVStep1"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/TVStep3"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="3. Then,for seven seconds hold your breath."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep2"
        app:layout_constraintTop_toBottomOf="@+id/TVStep2"
        app:layout_constraintVertical_bias="0.139" />

    <TextView
        android:id="@+id/TVStep4"
        android:layout_width="374dp"
        android:layout_height="55dp"
        android:background="@drawable/textview"
        android:gravity="center"
        android:text="4. Make another whooshing exhale from your mouth for eight seconds."
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/TVStep3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/TVStep3"
        app:layout_constraintTop_toBottomOf="@+id/TVStep3"
        app:layout_constraintVertical_bias="0.215" />


</androidx.constraintlayout.widget.ConstraintLayout>