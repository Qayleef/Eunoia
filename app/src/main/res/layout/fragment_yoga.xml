<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yoga"
    android:background="@drawable/img_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/BtnYoga1"
            android:layout_width="236dp"
            android:layout_height="102dp"
            android:backgroundTint="#9C89FF"
            android:fontFamily="@font/poppins_semibold"
            android:text="EXTENDED PUPPY POSE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnYoga2"
            android:layout_width="236dp"
            android:layout_height="99dp"
            android:backgroundTint="#9C89FF"
            android:fontFamily="@font/poppins_semibold"
            android:text="CHILD'S POSE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BtnYoga3"
            android:layout_width="233dp"
            android:layout_height="102dp"
            android:backgroundTint="@color/soft_purple"
            android:fontFamily="@font/poppins_semibold"
            android:text="HERO POSE"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>